<style>
section{
   display: flex;
   height:120vh;
   flex-direction: column;
   align-items:center;
   justify-content: center;
}
a{
   color:white;
}
</style>
<body>
    <section>
        <div class="images">
            <i class="fas fa-user" style="color:black; font-size: 7rem; margin-bottom: 2rem;"></i>

        </div>
        <form name="user" method="POST">
            <div class="details">
                <label>Email</label>
                <input type="email" required value="<%=email%>" name="email" readonly>
                </div>
                <div class="details">
                <label>Id</label>
                <input type="text" required value="<%=id%>" name="id">
                </div>
                <div class="details">
                <label>Username</label>
                <input type="text" required name="username" value="<%=username%>">
                </div>
                <div class="details">
                <label>Bio</label>
                <textarea rows="3" cols="3" value="" name="bio"><%=bio%></textarea>
                </div>

                <div class="button">
                <button>Update</button>
                </div>
                </form>
                </section>
